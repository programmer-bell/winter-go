# .air.toml
root = "."
tmp_dir = "tmp"

[build]
  # Command to build your project
  cmd = "go build -o ./tmp/main.exe ./cmd/api"
  
  # Binary output location
  bin = "tmp/main.exe"
  full_bin = "tmp/main.exe"

  # File extensions Air should watch
  include_ext = ["go", "tpl", "tmpl", "html"]

  # Directories to ignore
  exclude_dir = ["tmp"]

[log]
  time = true